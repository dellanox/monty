#!/bin/bash

########################################
# Rest of the script remains the same...
# Start a timer
start_time=$(date +%s)

# Iterate through all the files in the directory and add, commit, and push them
for file in *
do
  if [ -f "$file" ]; then
    filename=$(basename -- "$file")
    filename_without_extension="${filename%.*}"

    echo "$filename_without_extension" | giter "$file"
  fi
#  sleep 5
done

# End the timer and calculate the execution time
end_time=$(date +%s)
execution_time=$((end_time - start_time))

# Display how long the execution took in a cool manner
echo "Execution completed in $execution_time seconds. ðŸš€"
########################################
